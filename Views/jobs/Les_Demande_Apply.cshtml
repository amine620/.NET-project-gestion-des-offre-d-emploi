@model IEnumerable<wafabank.Models.Demande>

@{

}


<br><br><br>

<link href="~/Content/styleJQ.css" rel="stylesheet" />
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="~/jobs/Index"> Principal</a>
    <a href="~/Niveaux/Index"> Niveaux</a>
    <a href="~/Secteurs/Index">Secteurs</a>
    <a href="~/postes/Index">Poste</a>
    <a href="~/villes/Index">Ville</a>


</div>
<body style="margin-top: -49px;">

    <span style="font-size: 32px;cursor:pointer;margin-left: -103px;" onclick="openNav()">&#9776; Paneau</span>

    <table id="example" class="table table-striped table-bordered" style="width:100%;margin-left: -75px;margin-top: 85px;">
        <tr>
            <th>
                @Html.Label("Nom De Poste")
            </th>
            <th>
                @Html.Label("Nom De Secteurs")
            </th>
            <th>
                @Html.Label("nom de Condidat")
            </th>
            <th>
                @Html.Label("prenom")
            </th>

            <th>
                @Html.Label("Adresse")
            </th>
            <th>
                @Html.Label("Email")
            </th>
            <th>
                @Html.Label("Tele")
            </th>
            <th>
                @Html.Label("CIN")
            </th>
            <th>
                @Html.Label("Date Postulation")
            </th>
            <th>
                @Html.Label("Message")
            </th>
            <th>
                @Html.Label("Le Cv")
            </th>
            <th>
                @Html.Label("supprimer")
            </th>
            <th>
                @Html.Label("Confirmé")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.job.poste.Nom)</strong>
                </td>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.job.Secteur.Nom)</strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Adresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tele)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CIN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>

                    <a href="~/upload/@Html.DisplayFor(model => item.cv)" target="_blank">
                        <img src="~/upload/pdf-icon.png" style="width:48px;height:48px;margin-top:-5px; margin-left: 4px;">

                    </a>
                </td>
                <td>
                    @using (@Html.BeginForm("DeleteApply", "jobs", new { id = item.Id }))

                    {
                        var myModal = "myModal" + item.Id;
                    <button type="button" class="btn btn-default " data-toggle="modal" data-target="#@myModal"
                            data-whatever="@item.Id">
                        <img src="~/upload/Capturef.PNG" style="width:49px;height:39px;margin-top:-1px;margin-left:-1px;">

                    </button>

                        <!-- Modal -->
                        <div class="modal fade" id="@myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content" style="height: 300px;">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Suppression</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Voulez-Vous vraiment Supprimer Le Candidat: <span><b>@item.Nom</b></span>
                                        <img src="~/upload/Captureb.PNG" style="width: 92px;height: 86px;margin-top:-1px;margin-left: 69px;">

                                    </div>
                                    <div style="float:left" class="modal-footer">

                                        <button type="button" class="btn btn-dark text-center" data-dismiss="modal"><i class="fa fa-remove text-danger"></i> Annuler</button>
                                        <button type="submit" class="btn btn-danger text-center"><i class="fa fa-check-circle"></i> Supprimer</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </td>
                <td>
                    <a href="#" class="btn btn-default " style="color:white;margin-left: -4px;" onclick="edituti(@item.Id)">
                        <img src="~/upload/Capturen.PNG" style="width:49px;height:39px;margin-top:-1px;margin-left:-1px;">

                    </a>
                    <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document" style="margin-left: auto;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 class="modal-title" id="exampleModalLongTitle">Confirmé La demande</h2>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>

                                    </button>
                                </div>
                                <img src="~/upload/mail-512.png" style="width: 282PX;height: 282px;margin-left: 111px;margin-top: 9px;">

                                <div class="modal-body" id="myModalBodyDiv1" style="height: 71px;">

                                </div>

                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>
</body>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();

</script>
<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>
<script>
    $(document).ready(function () {
        $('#example').dataTable();
    });

    var edituti = function (ArticleId) {

        var url = "/jobs/SendConfirmation?id=" + ArticleId;


        $("#myModalBodyDiv1").load(url,
            function () {
                $("#myModal1").modal("show");

            });

    }


</script>