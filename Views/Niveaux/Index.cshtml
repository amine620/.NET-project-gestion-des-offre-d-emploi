@model IEnumerable<wafabank.Models.Niveau>

@{

}
<br><br><br>

<link href="~/Content/styleJQ.css" rel="stylesheet" />
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="~/jobs/Index">Principale</a>
    <a href="~/Secteurs/Index">Secteurs</a>
    <a href="~/postes/Index">Poste</a>
    <a href="~/villes/Index">Ville</a>

</div>

<body style="    margin-top: -49px;">
    <span style="font-size: 32px;cursor:pointer;margin-left: -103px;" onclick="openNav()">&#9776; Paneau</span>


    @using (Html.BeginForm("Create", "Niveaux", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container">
            <!-- Trigger the modal with a button -->
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" style="color: #fff; background-color: #5bc0de; border-color: #46b8da; margin-left: 848px;width: 202px;margin-top: -9px;">Ajouter</button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog ">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Ajouter Niveau</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Action("Create", "Niveaux")
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>

                </div>
            </div>

        </div>


    }


    <table id="example" class="table table-striped table-bordered" style="width:100%;margin-left: 5px;margin-top: 85px;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    <a href="#" class="btn btn-warning " style="color:white " onclick="edituti(@item.Id)"><i class="fa fa-edit"></i></a>

                    <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog " role="document" style="margin-left: auto;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 class="modal-title" id="exampleModalLongTitle">Modifier Le Niveau</h2>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>

                                    </button>
                                </div>
                                <div class="modal-body" id="myModalBodyDiv1">

                                </div>

                            </div>
                        </div>
                    </div>

                </td>

                <td>
                    <a href="#" class="btn btn-danger" style="color:white " onclick="delet(@item.Id)"><i class="fa fa-edit"></i></a>

                    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document" style="margin-left:auto;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h2 class="modal-title" id="exampleModalLongTitle">supprimer Le Niveau</h2>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>

                                    </button>
                                </div>
                                <div class="modal-body" id="myModalBodyDiv2">

                                </div>

                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }

    </table>
</body>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();

</script>
<script>
    $(document).ready(function () {
        $('#example').dataTable();
    });

    var edituti = function (ArticleId) {

        var url = "/Niveaux/Edit?id=" + ArticleId;


        $("#myModalBodyDiv1").load(url,
            function () {
                $("#myModal1").modal("show");

            });

    }


</script>

<script>
    $(document).ready(function () {
        $('#example').dataTable();
    });

    var delet = function (ArticleId) {

        var url = "/Niveaux/Delete?id=" + ArticleId;


        $("#myModalBodyDiv2").load(url,
            function () {
                $("#myModal2").modal("show");

            });

    }


</script>