@model IEnumerable<wafabank.Models.Demande>

@{

}

<h2>favoris</h2>

<img src="~/upload/icone-favoris.png" style="height:69px;width:80px;">

<table id="example" class="table table-striped table-bordered" style="width:100%;margin-left: 5px;margin-top: 85px;">
    <tr>
        <th>

            @Html.DisplayName("Secteur")
        </th>
        <th>
            @Html.DisplayName("poste")
        </th>
        <th>
            @Html.DisplayName("Adresse")
        </th>
        <th>
            @Html.DisplayName("ville")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Telephone")
        </th>
        <th>
            @Html.DisplayName("Supprimer")
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.job.Secteur.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.job.poste.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.job.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.job.ville.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.job.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Tele)
            </td>



            <td>
                @using (@Html.BeginForm("Delete", "Home", new { id = item.Id }))

                {
                    var myModal = "myModal" + item.Id;
                    <button type="button" class="btn btn-danger " data-toggle="modal" data-target="#@myModal"
                            data-whatever="@item.Id">
                        <i class="fa fa-remove"></i>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="@myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Suppression</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Voulez-Vous vraiment Supprimer: <span><b></b></span>
                                </div>
                                <div style="float:left" class="modal-footer">

                                    <button type="button" class="btn btn-dark text-center" data-dismiss="modal"><i class="fa fa-remove text-danger"></i> Annuler</button>
                                    <button type="submit" class="btn btn-danger text-center"><i class="fa fa-check-circle"></i> Supprimer</button>

                                </div>
                            </div>
                        </div>
                    </div>
                }

            </td>
        </tr>
    }

</table>
<script>
    $(document).ready(function () {
        $('#example').DataTable();

</script>
